//- Все примеси в этом файле должны начинаться c имени блока (form)

mixin form
	.form__grid
		.form__field.field
			label.field__inner
				.field__label Имя
				input.field__input.input(required='required' placeholder='Укажите ваше имя' type='text')
		.form__field.field
			label.field__inner
				.field__label Телефон
				input.field__input.input(required='required' type='tel' placeholder='+7 (___) ___-__-__' data-input-mask)
		button.form__button.button.button_white Отправить